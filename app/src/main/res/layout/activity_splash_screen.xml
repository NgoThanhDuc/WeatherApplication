<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layoutSplash_root"
    tools:context=".activities.SplashScreenActivity">

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/backgroundsplashblue"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/dms_200dp"
        android:layout_height="@dimen/dms_200dp"
        android:layout_marginStart="@dimen/dms_44dp"
        android:layout_marginTop="@dimen/dms_4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/splash2" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="@dimen/dms_200dp"
        android:layout_height="@dimen/dms_200dp"
        android:layout_marginTop="@dimen/dms_100dp"
        android:layout_marginEnd="@dimen/dms_8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/splash4" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="@dimen/dms_160dp"
        android:layout_height="@dimen/dms_160dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="180dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/splash3" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="@dimen/dms_200dp"
        android:layout_height="@dimen/dms_200dp"
        android:layout_marginTop="@dimen/dms_280dp"
        android:layout_marginEnd="@dimen/dms_36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/splash1" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dms_40dp"
        android:text="@string/design"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/dm_18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />


</androidx.constraintlayout.widget.ConstraintLayout>