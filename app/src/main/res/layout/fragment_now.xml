<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/toolbar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:visibility="invisible" />

    <include layout="@layout/now_fragment_content_main" />

    <edmt.dev.advancednestedscrollview.AdvancedNestedScrollView
        android:id="@+id/nested_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.example.weatherapp.Behavior.CustomBehavior">

        <FrameLayout
            android:id="@+id/card_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="blocksDescendants">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_arrowHourly"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/linearHourly"
                    android:clickable="true"
                    android:layout_marginTop="@dimen/dms_10dp"
                    android:src="@drawable/ic_arrow_up" />

                <RelativeLayout
                    android:id="@+id/relativeLayoutRV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@android:color/white"
                    android:gravity="center">
                    <LinearLayout
                        android:id="@+id/linearHourly"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_hourly"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="@dimen/dm_18sp"
                            android:text="@string/hourly"
                            android:textColor="@android:color/black"
                            android:layout_marginLeft="@dimen/dms_10dp"
                            android:layout_marginBottom="@dimen/dms_10dp"
                            android:layout_marginTop="@dimen/dms_5dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <ImageView
                                android:id="@+id/img_arrowLeftHourly"
                                android:layout_width="@dimen/dms_0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.2"
                                android:clickable="true"
                                android:src="@drawable/ic_arrow_left" />

                            <edmt.dev.advancednestedscrollview.MaxHeightRecyclerView
                                android:id="@+id/recyclerViewHourly"
                                android:layout_width="@dimen/dms_0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="2.6"
                                android:clipToPadding="false"
                                android:ellipsize="end"
                                android:scrollbars="none"
                                android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

                            <ImageView
                                android:id="@+id/img_arrowRightHourly"
                                android:layout_width="@dimen/dms_0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.2"
                                android:clickable="true"
                                android:src="@drawable/ic_arrow_right" />
                        </LinearLayout>

                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:orientation="vertical">

                    <edmt.dev.advancednestedscrollview.MaxHeightRecyclerView
                        android:id="@+id/card_recycler_view"
                        android:layout_width="match_parent"
                        android:background="@android:color/white"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

    </edmt.dev.advancednestedscrollview.AdvancedNestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>